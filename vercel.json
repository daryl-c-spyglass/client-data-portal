{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "functions": {
    "api/index.js": {
      "includeFiles": "dist/**"
    }
  },
  "rewrites": [
    { "source": "/assets/(.*)", "destination": "/dist/public/assets/$1" },
    { "source": "/(.*)", "destination": "/api/index.js" }
  ]
}
